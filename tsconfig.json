  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "module": "CommonJS",
    "target": "ES2021",
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "src",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  }
}